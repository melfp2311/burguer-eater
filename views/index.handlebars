<h1>Eat Da Veggie Burger!</h1>

<div class="card" style="width: 18rem;">
  <img src="assets/veggie_burger.png" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Must Devoure 'Em All!</h5>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
              {{> burgers/burgers-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
  </div>
</div>

<div class="card" style="width: 18rem;">
  <img src="assets/burger_devoured.png" class="card-img-top-1" alt="...">
  <div class="card-body-1">
    <h5 class="card-title">Deliciously Devoured:</h5>
      <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burgers-block devoured=false}}
            {{/if}}
        {{/each}}
      </ul>
  </div>
</div>

<div class="card form" style="width: 18rem;">
  <div class="card-body-1">
    <h5 class="card-title-add">Add a Burger!</h5>
    <form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured!</label><br>
    <input type="radio" name="devoured" value="1" checked>Devoured!<br> 
    <input type="radio" name="devoured" value="0"> Not Devoured Yet
  </div>

  <button type="submit" class= "btn btn-primary">Add a Burger</button>
</form>
  </div>
</div>
     